<%= form_for location do |f| %>
  <%= f.label :name, "Location Name" %>
  <br>
  <%= f.text_field :name %>
  <br>
  <br>
  <%= f.label :location, "Location" %>
  <br>
  <%= f.text_field :location %>
  <br>
  <br>
  <%= f.label :description, "Description" %>
  <br>
  <%= f.text_area :description, size: "50x10" %>
  <br>
  <br>
  <%= f.submit "Add Location" %>
<% end %>
