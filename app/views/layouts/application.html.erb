<!DOCTYPE html>
<html>
  <head>
    <title>Living Quarters</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<header class="header">
      LivingQuarters
    <h4 style="text-align:center; font-weight:300; font-size:16px; letter-spacing: 3px;">
      Spend Time away and learn to live in a Holistic Way.
    </h4>
    </header>
		<nav>
      <% if logged_in? %>
        <%= link_to "Locations", locations_path %>
        <%= link_to "Attractions", attractions_path %>
        <%= link_to "Assignments", assignments_path %>
        <%= link_to "My Profile", host_path(:current_user) %>
        <% if current_user.admin %>
        <%= link_to "Create Attraction", new_attraction_path %>
        <%= link_to "Add Location", new_location_path %>
        <% end %>
        <em><%= link_to "Log Out", logout_path %></em>
        <br>
      <% end %>
		</nav>
    <main>
      <section class="todoapp">
        <%= yield %>
      </section>
    </main>
  </body>
</html>
